<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        Width="400"
        Height="200"
        CanResize="False"
        x:Class="ObhodBApp.UpdateMsg"
        Title="Доступно обновление!">
        <Grid>
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                
                <TextBlock HorizontalAlignment="Center" Grid.Row="0" FontWeight="Bold" FontSize="50" Foreground="Gold" Padding="20" Name="Title">Обновление</TextBlock>
                <StackPanel HorizontalAlignment="Center" Grid.Row="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <materialIcons:MaterialIcon Kind="LightbulbVariantOutline"/>
                        <TextBlock VerticalAlignment="Center" Name="tVersion">Версия</TextBlock>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Grid.Row="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <materialIcons:MaterialIcon Kind="InformationSlabCircleOutline"/>
                        <TextBlock VerticalAlignment="Center" Name="tComment">Комментарий</TextBlock>
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" Grid.Row="3" Margin="20" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <Button Click="GetUpdate">Обновить</Button>
                        <Button Click="Close">Отказаться</Button>
                        <Button Click="DontShowAgain">Не предлагать</Button>
                </StackPanel>
        </Grid>
</Window>
